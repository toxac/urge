---
import Layout from "./Layout.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
    <main class="w-full min-h-screen">
        <div class="grid grid-cols-1  md:grid-cols-12 lg:grid-cols-6 gap-4 md:gap-6">
            <div class="md:col-span-2 lg:col-span-1 bg-gray-200 md:min-h-screen">01</div>
            <div class="md:col-span-8 lg:col-span-4 bg-gray-500 md:min-h-screen">04</div>
            <div class="md:col-span-2 lg:col-span-1 bg-gray-300 md:min-h-screen">05</div>
        </div>
    </main>
</Layout>